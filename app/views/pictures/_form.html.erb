<%= simple_form_for(@picture, :html => {:class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="form-inputs span8">
      <%= f.input :title %>
      <%= f.input :image %>
      <%= f.association :gallery %>
      <%# f.input :position %>
    </div>

    <div class='form-preview offset1'>
      <%- if @picture.image? %>
        <%= link_to image_tag(@picture.image_url(:thumb)), @picture %>
        <br />
        Current file: <%= @picture.image_identifier %>
      <%- end %>
    </div>
  </div>

  <div class="form-actions row">
    <%= f.button :submit, :class => "btn-primary" %>
    <%= submit_tag "Reset", :type => :reset, :class => "btn btn-warning" %>
  </div>
<% end %>
