<%= simple_form_for(@picture, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class='row-fluid'>
    <div class='form-inputs span7'>
      <%= f.input :title %>
      <%= f.input :image, :hint => "Current file: #{@picture.image_identifier}" %>
      <%= f.association :gallery %>
      <%# f.input :position %>
    </div>

    <div class='form-preview offset1 span3 img-polaroid'>
      <%- if @picture.image? %>
        <%= image_tag(@picture.image_url(:thumb)) %>
      <%- end %>
    </div>
  </div>

  <div class='form-crop row-fluid'>
    <%- if @picture.image? %>
      <%= image_tag(@picture.image_url(:normal), :id => 'cropbox', :class => 'span7') %>

      <div class='offset1 span3'>
        <% %w[x y w h].each do |attribute| %>
          <%= f.hidden_field "crop_#{attribute}"%>
        <% end %>
      </div>
    <%- end %>
  </div>

  <div class='form-actions row-fluid'>
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Reset', :type => :reset, :class => 'btn btn-warning' %>
  </div>
<% end %>
