<% content_for :title do %>
  <%= @page.title %>
<% end %>

<% content_for :slides do %>
  <div class="row-fluid">
    <div class="carousel slide" id="slide_show">
      <div class="carousel-inner">
        <ul class="item active">
          <% $i = 0 %>
          <% for picture in @page.pictures %>
            <li class="span6">
              <%= link_to(image_tag(picture.image_url(:thumb)), picture.image_url(:normal), :class => 'lb_gallery', :title => picture.title) %>
            </li>
            <% $i += 1 %>
            <% if (($i % 2) == 0) and ($i < @page.pictures.count) %>
              </ul>
              <ul class="item">
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<% content_for :content do %>
  <%= markdown(@page.content) %>
<% end %>

<%# @page.short_text.html_safe %>
<%= markdown(@page.short_text) %>

<% if @page.long_text? %>
  <%= link_to("#", html_options = { :rel => "popover",
              :title => @page.title,
              :data => { :content => markdown(@page.long_text) }}) do %>
    weiterlesen...
  <% end %>
<% end %>
