<%= simple_form_for(@page, :html => {:class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :slug %>
    <%= f.association :menu %>
    <%= f.input :maintainer, :collection => Page.maintainers, :include_blank => false, :as => :radio_buttons %>
    <%= f.input :content_type, :collection => Page.content_types, :include_blank => false %>
    <%= f.input :short_text, :input_html => {:rows => 3, :class => "col-xs-9"} %>
    <%= f.input :long_text, :input_html => {:rows => 5, :class => "col-xs-9"} %>
    <%= f.input :content, :input_html => {:rows => 10, :class => "col-xs-9"} %>
    <%= f.input :address, :input_html => {:class => "col-xs-9"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
    <%= submit_tag "Reset", :type => :reset, :class => "btn btn-warning" %>
  </div>
<% end %>
