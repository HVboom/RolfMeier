<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Short text</th>
    <th>Long text</th>
    <th>Maintainer</th>
    <th>Content type</th>
    <th>Content</th>
    <th>Menu</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= page.short_text %></td>
    <td><%= page.long_text %></td>
    <td><%= page.maintainer %></td>
    <td><%= page.content_type %></td>
    <td><%= page.content %></td>
    <td><%= page.menu %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

