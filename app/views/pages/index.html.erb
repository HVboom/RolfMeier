<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Menu</th>
    <th>Short text</th>
    <th>Maintainer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.menu.title if(page.menu) %></td>
    <td><%= page.short_text.truncate(75, :separator => ' ') %></td>
    <td><%= page.maintainer %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

