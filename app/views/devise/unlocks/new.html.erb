<h2>Resend unlock instructions</h2>

<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :placeholder => "user@example.ch", :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend unlock instructions", :class => "btn btn-primary" %>
    <%= submit_tag "Reset", :type => :reset, :class => "btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "Back", :back %>
